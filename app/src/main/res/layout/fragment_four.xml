<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.fourFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Tables"
        android:id="@+id/table"
        android:fontFamily="@font/comickings"
        android:textSize="@dimen/headsize"
        android:textColor="@color/headcolor"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/fill"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:id="@+id/view"
        android:layout_below="@+id/table"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:weightSum="1"
        android:id="@+id/lin"
        android:orientation="horizontal">
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:id="@+id/inputnumber"
        android:inputType="numberDecimal"
        android:textColorHighlight="#4a58fc"
        android:hint="@string/enter_the_number_for_table"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_weight="0.8"
            android:id="@+id/btn"
            android:background="#00000000"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_black_24dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#e1e0e0"
        android:id="@+id/view2"
        android:layout_below="@+id/lin"/>
    <ScrollView
        android:layout_below="@id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:fontFamily="@font/comickings"
        android:textColor="#ea22a7"
        android:layout_marginTop="10dp"
        android:id="@+id/tableshow"
        android:stateListAnimator="@anim/bounce"

        tools:targetApi="lollipop" />
    </ScrollView>
</RelativeLayout>