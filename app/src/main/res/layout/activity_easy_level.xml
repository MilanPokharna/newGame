<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/gradient"
    tools:context=".activity.basic"
>
<LinearLayout
    android:layout_width="match_parent"
     android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:weightSum="2"
    android:orientation="vertical">
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        layout="@layout/included_main"
        android:id="@+id/included"
        />

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/r3"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:weightSum="3"
            >

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:clickable="false"
                android:layout_weight="1"
                android:backgroundTint="#cec6c6"
                android:background="@drawable/seletor_botao"
                android:id="@+id/setting_button"
                android:cropToPadding="true"
                android:scaleType="fitCenter" />


            <Button
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/seletor_botao1"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:id="@+id/button_8" />


            <Button
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/seletor_botao6"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center"
                android:id="@+id/button_clear" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/r1"
            android:layout_margin="8dp"
            android:layout_weight="1">

            <Button
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:clickable="false"
                android:layout_height="match_parent"
                android:backgroundTint="#cec6c6"
                android:background="@drawable/seletor_botao"
                android:id="@+id/button_1"
                android:layout_weight="1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/seletor_botao1"
                android:id="@+id/button_2"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:layout_margin="8dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/seletor_botao2"
                android:id="@+id/button_9"
                android:layout_weight="1"
                android:clickable="false"
                android:layout_margin="8dp"
                android:backgroundTint="#cec6c6"
                android:textSize="25sp"
                android:textColor="#ffff"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/r2"
            android:layout_margin="8dp"
            android:layout_weight="1"
            >
            <Button
                android:layout_margin="8dp"
                android:clickable="false"
                android:layout_width="match_parent"
                android:backgroundTint="#cec6c6"
                android:layout_height="match_parent"
                android:background="@drawable/seletor_botao"
                android:id="@+id/button_4"
                android:layout_weight="1"/>

            <Button
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/seletor_botao1"
                android:id="@+id/button_5"
                android:textColor="#FFFFFF"
                android:textSize="30sp"/>
            <Button
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:background="@drawable/seletor_botao"
                android:backgroundTint="#cec6c6"
                android:id="@+id/button_6" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</FrameLayout>