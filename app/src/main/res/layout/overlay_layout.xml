<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#A6000000"
    android:layout_height="match_parent"
    android:id="@+id/overlay_view"
    android:onClick="call">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/instruct1">
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/arrow"
        android:id="@+id/image_instruct"
        android:padding="6dp"
        android:scaleY="3"
        />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="150dp"
            android:src="@drawable/arrow"
            android:id="@+id/image_instructright"
            android:padding="6dp"
            android:scaleY="3"
            android:scaleX="-1"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:id="@+id/text_instruct"
        android:padding="4dp"
        android:textAlignment="center"
        android:layout_toLeftOf="@id/image_instructright"
        android:layout_toRightOf="@id/image_instruct"
        android:layout_below="@id/image_instruct"
        android:fontFamily="@font/earworm"
        android:textSize="26sp"
        android:text="Reach the goal with the limited no. of moves"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/instruct2">

        <ImageView
            android:id="@+id/image_instruct2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"
            android:padding="6dp"
            android:scaleY="-3"
            android:src="@drawable/arrow" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:id="@+id/text_instruct2"
            android:padding="4dp"
            android:layout_marginRight="4dp"
            android:textAlignment="center"
            android:layout_toRightOf="@id/image_instruct2"
            android:layout_above="@id/image_instruct2"
            android:fontFamily="@font/earworm"
            android:textSize="26sp"
            android:text="Use these buttons to obtain your answer"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/instruct3">

        <ImageView
            android:id="@+id/image_instruct1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="122dp"
            android:padding="6dp"
            android:src="@drawable/whitecircle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:id="@+id/text_instruct1"
            android:padding="4dp"
            android:layout_margin="8dp"
            android:textAlignment="center"
            android:layout_below="@id/image_instruct1"
            android:fontFamily="@font/earworm"
            android:textSize="22sp"
            android:text="It has a default value and then add a value from the given buttons to obtain the goal"
            />
    </RelativeLayout>

</RelativeLayout>