<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_triangle"
    tools:context=".activity.HomeActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Math Mania"
            android:textColor="#6ec8f5"
            android:textSize="45sp"
            android:id="@+id/lin"
            android:fontFamily="@font/comickings"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin"
        android:layout_margin="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/lin2"
    android:layout_below="@id/lin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageButton
        android:onClick="easylevel"
        android:layout_margin="16dp"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:background="@drawable/seletor_botao6"
        android:src="@drawable/child"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Maths"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:fontFamily="@font/earworm"
        android:textSize="30sp"/>
</LinearLayout>
    <LinearLayout
        android:layout_below="@id/lin2"
        android:id="@+id/lin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn Objects"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/earworm"
            android:textSize="30sp"/>
        <ImageButton
        android:layout_margin="16dp"
        android:layout_width="80dp"
        android:id="@+id/object"
        android:layout_height="100dp"
        android:background="@drawable/seletor_botao"
        android:src="@drawable/icons8"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/lin3"
        android:id="@+id/lin4">
        <ImageButton

            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/trigno"
            android:background="@drawable/seletor_botao4"
            android:src="@drawable/prof"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Trigo"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/earworm"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_below="@id/lin4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn"
            android:layout_marginRight="15dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/earworm"
            android:textSize="30sp"/>
        <ImageButton
            android:layout_margin="16dp"

            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/learn"
            android:background="@drawable/seletor_botao2"
            android:src="@drawable/book"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="26dp"
        android:fontFamily="@font/earworm"
        android:layout_alignParentBottom="true"
        android:text="Fun with learning"/>
</RelativeLayout>