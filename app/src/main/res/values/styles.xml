<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="welcome_buttons">
        <item name="android:textColor">#6ec8f5</item>
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/comickings</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        </style>


    <style name="menu_buttons">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/earworm</item>
<item name="android:gravity">center</item>
    </style>

    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">#69f0ae</item>
        <item name="android:progressTint">#1cb738</item>
        <item name="android:minWidth">200dp</item>
    </style>



</resources>
